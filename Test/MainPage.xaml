<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test.MainPage">

    <StackLayout>
        <Entry Placeholder="Имя" x:Name="NameEntry"/>
        <Entry Placeholder="Фамилия" x:Name="FamilyEntry"/>
        <Entry Placeholder="Логин" x:Name="UsernameEntry" />
        <Entry Placeholder="Пароль" IsPassword="True" x:Name="PasswordEntry" />
        <Button Text="Войти" Clicked="OnLoginButtonClicked" />
    </StackLayout>

</ContentPage>
